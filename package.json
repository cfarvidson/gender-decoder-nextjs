{
  "name": "gender-decoder-nextjs",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "pnpm lang && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "lang:extract": "NODE_ENV=development lingui extract --clean",
    "lang:compile": "lingui compile",
    "lang": "pnpm lang:extract && pnpm lang:compile",
    "prepare": "husky",
    "detect-unused": "node scripts/detect-unused.js",
    "detect-circular-imports": "madge --circular src/",
    "all": "pnpm build && jest && pnpm detect-unused && pnpm detect-circular-imports"
  },
  "dependencies": {
    "@lingui/core": "5.4.1",
    "@lingui/react": "5.4.1",
    "classnames": "^2.5.1",
    "is-hotkey": "^0.2.0",
    "lodash": "^4.17.21",
    "make-plural": "^7.4.0",
    "next": "15.5.0",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@lingui/cli": "5.4.1",
    "@lingui/loader": "5.4.1",
    "@lingui/macro": "5.4.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/is-hotkey": "^0.1.10",
    "@types/jest": "30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.7",
    "autoprefixer": "^10.4.21",
    "babel-cli": "^6.26.0",
    "babel-jest": "30.0.5",
    "babel-plugin-macros": "^3.1.0",
    "eslint": "9.34.0",
    "eslint-config-next": "15.5.0",
    "husky": "9.1.7",
    "jest": "30.0.5",
    "jest-environment-jsdom": "30.0.5",
    "madge": "8.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "5.9.2"
  }
